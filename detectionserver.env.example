# Logging
LOG_FILE=/var/log/detectionserver.log

# MQTT Configuration
MQTT_BROKER=mqtt.example.com
MQTT_PORT=8883
MQTT_USER=your_mqtt_username
MQTT_PASS=your_mqtt_password
TOPIC_MOTION=frigate/CamName/motion
TOPIC_CAT=frigate/CamName/cat

# YOLO Model
YOLO_MODEL_PATH=/opt/catdetect/models/your-yolo-model.pt

# Image Capture
IMAGE_URL=http://your-frigate-host:5000/api/camera-name/latest.jpg
SAVE_FOLDER=/opt/catdetect/images
TEMP_DIR=/tmp/catdetect_temp
OUTPUT_GIF=/tmp/catgif.gif

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:your_telegram_bot_token
TELEGRAM_CHAT_ID=<Your Chat ID>

# Cats to detect
CAT_NAMES=<Your Cat(s)>
